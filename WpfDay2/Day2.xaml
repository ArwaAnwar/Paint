        xmlns:local="clr-namespace:WpfDay2"
        mc:Ignorable="d"
        Title="Day2" Height="450" Width="800">
    <Window.Resources>

        <LinearGradientBrush
            StartPoint="0,0"
            EndPoint=".5,.5"
            SpreadMethod="Reflect"
            x:Key="LinearBackground"
            >
            <GradientStop Color="Red" Offset=".25"></GradientStop>
            <GradientStop Color="Orange" Offset=".5"></GradientStop>
            <GradientStop Color="Yellow" Offset=".75"></GradientStop>
        </LinearGradientBrush>
        <Style x:Key="BtnStyle" >
            <Style.Setters>
                <Setter Property="Control.Width" Value="70"></Setter>
                <Setter Property="Control.Height" Value="30"></Setter>
                <Setter Property="Control.Margin" Value="5"></Setter>
                <Setter Property="Control.FontFamily" Value="Arial"></Setter>
                <Setter Property="Control.FontWeight" Value="Bold"></Setter>
                <Setter Property="Control.Background" Value="{ StaticResource ResourceKey=LinearBackground}"></Setter>
                <!--<Setter Property="Control.Content" Value="Click"></Setter>-->
            </Style.Setters>
            
        </Style>


    </Window.Resources>

